@model _22DH112705_TranTanPhat.Data.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm đầu tiên";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">@ViewData["Title"]</h2>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thông tin sản phẩm</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.ImagePro))
            {
                <div class="text-center mb-4">
                    <img src="@Model.ImagePro" alt="@Model.NamePro" class="img-fluid rounded" style="max-width: 300px; max-height: 300px; object-fit: cover;" />
                </div>
            }
            <div class="row">
                <div class="col-md-6">
                    <h5><strong>Tên sản phẩm:</strong></h5>
                    <p>@(Model.NamePro ?? "Không có")</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>Danh mục:</strong></h5>
                    <p>@(Model.Category ?? "Không có")</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>Giá:</strong></h5>
                    <p>@(Model.Price.HasValue ? Model.Price.Value.ToString("C") : "Không có")</p>
                </div>
                <div class="col-md-6">
                    <h5><strong>Ngày sản xuất:</strong></h5>
                    <p>@Model.ManufacturingDate.ToShortDateString()</p>
                </div>
                <div class="col-md-12">
                    <h5><strong>Mô tả:</strong></h5>
                    <p>@(Model.DecriptionPro ?? "Không có")</p>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light text-center">
            <a asp-action="Create" class="btn btn-primary btn-lg mx-2">Tạo sản phẩm mới</a>
            <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning btn-lg mx-2">Sửa sản phẩm</a>
            <a asp-action="Delete" asp-route-id="@Model.ProductId" class="btn btn-danger btn-lg mx-2">Xóa sản phẩm</a>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }
    .card-header {
        border-radius: 10px 10px 0 0;
    }
    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }
    .btn-lg:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>