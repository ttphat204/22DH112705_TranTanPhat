@model _22DH112705_TranTanPhat.Data.Product

@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">@ViewData["Title"]</h2>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Thêm sản phẩm mới</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="NamePro" class="form-label fw-bold"></label>
                        <input asp-for="NamePro" class="form-control" placeholder="Nhập tên sản phẩm" />
                        <span asp-validation-for="NamePro" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="DecriptionPro" class="form-label fw-bold"></label>
                        <input asp-for="DecriptionPro" class="form-control" placeholder="Nhập mô tả sản phẩm" />
                        <span asp-validation-for="DecriptionPro" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Category" class="form-label fw-bold"></label>
                        <select asp-for="Category" class="form-select" asp-items="@(new SelectList(ViewBag.Categories))">
                            <option value="">-- Chọn danh mục --</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="Price" class="form-label fw-bold"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="Nhập giá sản phẩm" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="ImagePro" class="form-label fw-bold"></label>
                        <input asp-for="ImagePro" class="form-control" placeholder="Nhập URL ảnh sản phẩm" />
                        <span asp-validation-for="ImagePro" class="text-danger"></span>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label asp-for="ManufacturingDate" class="form-label fw-bold"></label>
                        <input asp-for="ManufacturingDate" class="form-control" type="date" max="@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="ManufacturingDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="text-center mt-4">
                    <input type="submit" value="Tạo sản phẩm" class="btn btn-primary btn-lg mx-2" />
                    <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 10px;
    }

    .card-header {
        border-radius: 10px 10px 0 0;
    }

    .form-label {
        color: #333;
    }

    .form-control, .form-select {
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

    .btn-lg {
        padding: 10px 20px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-lg:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }
</style>